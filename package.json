    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "handlebars": "^4.7.3",
    "helmet": "^3.21.3",
    "mongoose": "^5.9.5",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.6",
    "rimraf": "^3.0.2",
    "ts-node": "^8.8.1",
    "yup": "^0.28.3"
